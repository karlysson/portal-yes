section.content-header
  h1
    | Categoria de Anúncios
    small Adminitrativo
  ol.breadcrumb
    li
      a href="/admin"
        i.fa.fa-adn
        | Home
    li.active Anúncios
    li
      a href="/admin/advertising_categories" Categorias

br


.col-xs-12
  .box.box-primary.box-solid
    .box-header.with-border
      h3.box-title
        | Pesquisar
      .box-tools.pull-right
        button.btn.btn-box-tool data-widget="collapse" type="button"
          i.fa.fa-minus
    .box-body
        .col-xs-12
          form accept-charset="UTF-8" action="/admin/advertising_categories" method="get"
            input name="utf8" type="hidden" value="✓"
            .input-group.input-group-sm
              input#search.form-control name="search"
              / input#search.form-control :name=>"search" :placeholder=>"Nome do Cliente, CPF, CNPJ ou Telefone"
              span.input-group-btn
                input.btn.btn-primary.btn-lg name="commit" type="submit" value="Pesquisar!"


.col-xs-12
  .box.box-primary
    .box-header
      h3.box-title
        | Anúcios
    .box-body
      table.table.table-bordered.table-striped
        thead
          tr
            th Código
            th Nome
            th
        tbody
          - @advertising_categories.each do |advertising_category|
            tr
              td = advertising_category.id
              td = advertising_category.name
              td
                a.btn.btn-default.fa.fa-search href="/admin/advertising_categories/#{advertising_category.id}"
                a.btn.btn-default.fa.fa-edit href="/admin/advertising_categories/#{advertising_category.id}/edit"
                a.btn.btn-default.fa.fa-times href="/admin/advertising_categories/#{advertising_category.id}" data-method="DELETE" data-disabled="true" data={ confirm: " Deseja realmente excluir #{advertising_category.name} ?"}

      = will_paginate @advertising_categories, renderer: BootstrapPagination::Rails

  a.btn.btn-primary href="/admin/advertising_categories/new"  Nova Categoria de Anúncio
